<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:bb="http://schemas.fontawesome.io/icons/"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="950" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <MediaElement x:Name="VideoControl" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="3" Grid.Row="0"  Source="img/vidio.mp4" Volume="0.00001" UnloadedBehavior="Manual" LoadedBehavior="Manual"/>
        <Button Content="Guest" Click="btnCustomer_Click" Grid.Column="0" Grid.Row="1"/>
        <Button Content="User" Click="Button_Click" Grid.Column="1" Grid.Row="1"/>
        <Button Content="Simulator" Grid.Column="2" Grid.Row="1" Click="Button_Click_2"/>
    </Grid>
</Window>
