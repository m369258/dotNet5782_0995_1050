<UserControl x:Class="PL.Product.ProductPresentation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PL.Product"
             mc:Ignorable="d" 
             DataContext="{Binding MyProductItem, RelativeSource={RelativeSource Mode=Self}}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox x:Name="txtProductItemName" HorizontalAlignment="Center" Text="{Binding Name}" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" FontSize="14" Margin="0,45,0,0"/>
        <TextBox x:Name="txtPrice" HorizontalAlignment="Center" Text="{Binding Price}" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" FontSize="14" Margin="0,108,0,0"/>
        <ScrollBar x:Name="slbAmount" HorizontalAlignment="Center" Margin="0,334,0,0" VerticalAlignment="Top" ValueChanged="slbAmount_ValueChanged"/>

    </Grid>
</UserControl>
