<Window x:Class="PL.Product.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Product"
        mc:Ignorable="d"
        Title="ProductWindow" Height="450" Width="800">
    <Grid>
        <!--<Grid.ColumnDefinitions>
            <ColumnDefinition Width="319*"/>
            <ColumnDefinition Width="481*"/>
        </Grid.ColumnDefinitions>-->
        <Grid Grid.ColumnSpan="2" Margin="-1,0,1,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label x:Name="lblID" Content="קוד פריט" HorizontalAlignment="Left" Margin="162,0,0,0" Grid.Row="1" VerticalAlignment="Center"/>
            <Label x:Name="lblName" Content="שם פריט" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center"/>
            <TextBox x:Name="txtName" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Center" Width="120"/>
            <TextBox x:Name="txtID" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" RenderTransformOrigin="0.255,0.582"/>
            <Label x:Name="lblCategory" Content="קטגוריה" HorizontalAlignment="Left" Margin="172,21,0,0" Grid.Row="3" VerticalAlignment="Top"/>
            <Label x:Name="lblPrice" Content="מחיר" HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Top" RenderTransformOrigin="0.434,0.821" Margin="0,25,0,0"/>
            <TextBox x:Name="txtPrice" Grid.Column="1" HorizontalAlignment="Center" Margin="0,27,0,0" Grid.Row="4" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <Label x:Name="lblInStock" Content="כמות במלאי" HorizontalAlignment="Left" Margin="156,0,0,0" Grid.Row="5" VerticalAlignment="Center"/>
            <TextBox x:Name="txtInStock" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="5" TextWrapping="Wrap" VerticalAlignment="Center" Width="120"/>
            <Button x:Name="btnAddOrUpdateProduct" Content="Button" HorizontalAlignment="Left" Margin="340,31,0,0" Grid.Row="6" VerticalAlignment="Top" Click="btnAddOrUpdateProduct_Click"/>
            <ComboBox x:Name="cbxCategory" Grid.Column="1" HorizontalAlignment="Left" Margin="161,31,0,0" Grid.Row="3" VerticalAlignment="Top" Width="120"/>
        </Grid>
        <TextBox HorizontalAlignment="Left" Margin="-19,-23,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
